{
  "compilerOptions": {
	"sourceRoot": "./src",
	"outDir": "./dist",
	"moduleResolution": "node",
	"lib": [
	  "dom",
	  "es2017"
	],
	"jsx": "react",
	"declaration": true,
	"sourceMap": true,
	"skipLibCheck": true
  },
  "include": [
	"src/*.ts",
	"src/*.tsx"
  ],
  "exclude": [
	"node_modules"
  ]
}
